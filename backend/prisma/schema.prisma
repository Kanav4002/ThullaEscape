generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  avatar    String
  level     Int      @default(1)
  password  String
  rooms     Room[]   @relation("RoomOwner")
  players   RoomPlayer[]
  createdAt DateTime @default(now())
}

model Room {
  code      String       @id
  ownerId   String
  owner     User         @relation("RoomOwner", fields: [ownerId], references: [id])
  status    String       @default("lobby")
  players   RoomPlayer[]
  createdAt DateTime     @default(now())
}

model RoomPlayer {
  id       String @id @default(cuid())
  roomCode String
  userId   String
  name     String
  avatar   String
  createdAt DateTime @default(now())
  room     Room   @relation(fields: [roomCode], references: [code])
  user     User   @relation(fields: [userId], references: [id])

  @@unique([roomCode, userId])
}